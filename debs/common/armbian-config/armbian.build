#!/bin/bash

mkdir -p $mergeddir/usr/bin $mergeddir/usr/sbin $mergeddir/usr/lib/armbian-config
install -m 755 $1/sources/scripts/tv_grab_file				$mergeddir/usr/bin/tv_grab_file
install -m 755 $1/sources/debian-config 					$mergeddir/usr/sbin/armbian-config
install -m 644 $1/sources/debian-config-jobs 				$mergeddir/usr/lib/armbian-config/jobs.sh
install -m 644 $1/sources/debian-config-submenu 			$mergeddir/usr/lib/armbian-config/submenu.sh
install -m 644 $1/sources/debian-config-functions 			$mergeddir/usr/lib/armbian-config/functions.sh
install -m 644 $1/sources/debian-config-functions-network 	$mergeddir/usr/lib/armbian-config/functions-network.sh
install -m 755 $1/sources/softy 							$mergeddir/usr/sbin/softy
# fallback to replace armbian-config in BSP
ln -s /usr/sbin/armbian-config $mergeddir/usr/bin/armbian-config
ln -s /usr/sbin/softy $mergeddir/usr/bin/softy